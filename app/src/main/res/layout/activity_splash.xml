<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_gradient"
    tools:context=".SplashActivity">

    <TextView
        android:id="@+id/textview_splash_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BE SOPT"
        android:textSize="36sp"
        android:textColor="@color/splash_title"
        android:fontFamily="@font/blackhansansregular"
        android:gravity="center"
        android:layout_marginTop="76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textview_splash_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android"
        android:fontFamily="@font/blackhansansregular"
        android:layout_marginTop="8dp"
        android:textColor="@color/splash_title"
        android:textSize="28sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_splash_title"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_splash_cube"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:lottie_autoPlay="true"
        app:lottie_fileName="travel_fun.json"
        app:lottie_loop="true" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>