<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools">
    <data>
        <variable
            name="data"
            type="org.sopt.androidseminar.GithubRepo" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintlayout_item_github"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/item_divider"
    android:foreground="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/github_repository_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text ="@{data.repository_name}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text = "RepositoryName"/>


    <TextView
        android:id="@+id/github_repository_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text ="@{data.repository_id}"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/github_repository_name"
        tools:text = "userId"/>

    <TextView
        android:id="@+id/github_repository_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{data.repository_date}"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/github_repository_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text = "repositoryDate"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>